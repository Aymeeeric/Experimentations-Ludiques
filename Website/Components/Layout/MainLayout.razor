@inherits LayoutComponentBase

<FluentLayout>
    
    <FluentHeader>
        <span>
            Aymeeeric.dev - Expérimentations ludiques
        </span>
    </FluentHeader>

    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    
    <FluentFooter>
        <div class="link1">
            <a href="https://github.com/Aymeeeric/Experimentations-Ludiques" target="_blank">Aymeeeric / Aymeric De Moura</a>
        </div>
        <div class="link2">
            © @DateTime.UtcNow.Year
        </div>
    </FluentFooter>
    
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>