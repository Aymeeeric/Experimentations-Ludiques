@inherits LayoutComponentBase

<FluentDesignTheme @bind-Mode="@CurrentMode"
                   @bind-OfficeColor="@CurrentColor"
                   StorageName="appthemestorage"/>

<FluentLayout>
    <FluentHeader>
        <FluentGrid Justify="JustifyContent.SpaceBetween">
            <FluentGridItem xs="10" Style="text-align: center">
                <FluentStack Orientation="Orientation.Vertical" VerticalAlignment="VerticalAlignment.Center" Style="height: 100%">
                    Aymeeeric.fr - Expérimentations ludiques
                </FluentStack>
            </FluentGridItem>
            <FluentGridItem xs="02">
                <FluentSelect Items="@(Enum.GetValues<DesignThemeModes>())"
                              @bind-SelectedOption="@CurrentMode"/>
            </FluentGridItem>
        </FluentGrid>
    </FluentHeader>
    
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        @* Pour l'instant, pas utilisé... *@
        @* <NavMenu /> *@
        <FluentBodyContent>
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <div class="link1">
            <a href="https://www.fluentui-blazor.net" target="_blank">Documentation and demos</a>
        </div>
        <div class="link2">
            <a href="https://learn.microsoft.com/en-us/aspnet/core/blazor" target="_blank">About Blazor</a>
        </div>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code
{
    public DesignThemeModes CurrentMode { get; set; }
    public OfficeColor? CurrentColor { get; set; } = OfficeColor.Booking;
}
